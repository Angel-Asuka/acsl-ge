{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "stripInternal": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": false,
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["./test"]
}